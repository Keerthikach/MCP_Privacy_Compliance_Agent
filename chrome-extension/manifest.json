{
  "manifest_version": 3,
  "name": "Privacy Checker Bridge",
  "version": "1.0",
  "description": "Warns users about website privacy before login",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icon.png"
  },
  "host_permissions": ["http://127.0.0.1:5000/*"]
}
